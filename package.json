{
   "name": "tweet-service",
   "version": "0.0.1",
   "repository": "https://github.com/triblondon/tweet-service.git",
   "dependencies": {
      "express": "3.x",
      "mustache": "0.8",
      "twit": "*",
      "moment": "*",
      "forever": "*",
      "htmltidy": "*",
      "deferred": "*",
      "request": "*",
      "memcached": "*",
      "lodash": "*",
      "node-sass": "*",
      "bower": "*"
   },
   "scripts": {
      "prepare": "git pull; mkdir logs; chmod -R 777 logs; mkdir public; chmod -R 777 public; npm install; bower install; node-sass --include-path bower_components resources/main.scss public/bundle.css;",
      "start": "forever start --minUptime 1000 --spinSleepTime 1000 --no-colors app.js",
      "stop": "forever stop --no-colors app.js"
   }
}
